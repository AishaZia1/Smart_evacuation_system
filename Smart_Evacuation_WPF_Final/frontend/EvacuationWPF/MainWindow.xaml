<Window x:Class="EvacuationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Evacuation Simulator"
        Width="1100"
        Height="650"
        Background="#1E1E1E">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- MAP -->
        <Border Margin="10"
                Background="#2B2B2B"
                CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="1">
            <Canvas x:Name="MapCanvas"
                    MouseDown="MapCanvas_MouseDown"/>
        </Border>

        <!-- RIGHT PANEL -->
        <StackPanel Grid.Column="1" Margin="15">

            <TextBlock Text="🚨 Smart Evacuation System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <Button Content="▶ Start Simulation"
                    Height="40"
                    Margin="0,0,0,15"
                    Background="#3A7AFE"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Start_Click"/>

            <TextBlock Text="Evaluation Results"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,10,0,5"/>

            <TextBlock x:Name="RuntimeText" Foreground="#BBBBBB"/>
            <TextBlock x:Name="MemoryText" Foreground="#BBBBBB"/>
            <TextBlock x:Name="PathText" Foreground="#BBBBBB"/>

            <TextBlock Text="Runtime Graph"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,20,0,5"/>

            <Canvas x:Name="GraphCanvas"
                    Height="200"
                    Background="#2B2B2B"/>
        </StackPanel>
    </Grid>
</Window>
